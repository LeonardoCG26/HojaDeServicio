<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".RegistroF1">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recepcion del servicio"
        android:textSize="30dp" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de solicitud: " />

    <Button
        android:id="@+id/bFecha"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Fecha" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de atención: " />

    <TextView
        android:id="@+id/fecha_soli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0" />

    <EditText
        android:id="@+id/eFecha"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Fecha" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:text="Hora de llegada" />

    <Button
        android:id="@+id/bHora"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Hora" />

    <EditText
        android:id="@+id/eHora"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Hora" />

    <EditText
        android:id="@+id/Lugar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Campus, Facultad" />

    <EditText
        android:id="@+id/Edificio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Edificio, Área" />

    <EditText
        android:id="@+id/EncargadoAr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Encargado de área" />

    <EditText
        android:id="@+id/Telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Telefono"
        android:inputType="number"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:hint="Problematica" />

    <Button
        android:id="@+id/btnNext1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Siguiente" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

</LinearLayout>
